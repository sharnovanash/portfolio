    <script>
        function checkPassword() {
            const pass = document.getElementById('pass-input').value;
            if (pass === "NYU!!!") {
                document.getElementById('password-gate').style.display = 'none';
                document.getElementById('portfolio-content').style.display = 'block';
            } else {
                const error = document.getElementById('error-msg');
                error.style.display = 'block';
                error.style.color = '#ff4444';
            }
        }

        document.getElementById('pass-input').addEventListener('keypress', e => { if (e.key === 'Enter') checkPassword(); });

        function showSection(sectionName, event) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(sectionName).classList.add('active');
            const nav = document.getElementById('main-nav');
            if (sectionName === 'about') nav.classList.add('on-light');
            else nav.classList.remove('on-light');
            if (event && event.currentTarget) event.currentTarget.classList.add('active');
            window.scrollTo(0, 0);
        }

        let sliderStates = { ppState: 0, chState: 0, seState: 0, gbState: 0 };

        function toggleSlider(cardId, stateKey) {
            const card = document.getElementById(cardId);
            const slider = card.querySelector('.slider-wrapper');
            const triangle = card.querySelector('.triangle-button');
            
            // Get slide count from data attribute
            const maxSlides = card.getAttribute('data-slides') ? parseInt(card.getAttribute('data-slides')) : 3;
            
            // Cycle through states
            sliderStates[stateKey] = (sliderStates[stateKey] + 1) % maxSlides;
            slider.style.transform = `translateX(-${sliderStates[stateKey] * 100}%)`;
            
            // Auto-play videos when they appear
            const slides = slider.querySelectorAll('.slide-item');
            const currentSlide = slides[sliderStates[stateKey]];
            if (currentSlide.tagName === 'VIDEO') {
                currentSlide.currentTime = 0;
                currentSlide.play();
            }

            if (sliderStates[stateKey] === 0) {
                card.classList.remove('is-sliding');
                triangle.style.transform = "rotate(0deg)";
            } else {
                card.classList.add('is-sliding');
                // Flip arrow only on the final slide
                triangle.style.transform = sliderStates[stateKey] === maxSlides - 1 ? "rotate(180deg)" : "rotate(0deg)";
            }
        }

        // Fish Following Logic
        const school = document.getElementById('fish-school');
        const fishes = document.querySelectorAll('.fish');
        let isTrailing = false; let positions = []; const delay = 8; 

        document.addEventListener('mousemove', (e) => {
            if (!isTrailing) return;
            positions.unshift({ x: e.clientX, y: e.clientY });
            if (positions.length > fishes.length * delay + 1) positions.pop();
            fishes.forEach((fish, index) => {
                const posIndex = index * delay;
                if (positions[posIndex]) {
                    const pos = positions[posIndex];
                    fish.style.position = 'fixed';
                    fish.style.left = (pos.x - 12) + 'px';
                    fish.style.top = (pos.y - 12) + 'px';
                    fish.style.zIndex = "9999";
                }
            });
        });

        document.getElementById('about-greeting').addEventListener('mouseenter', () => { isTrailing = true; school.classList.add('active'); positions = []; });
        document.getElementById('about').addEventListener('mouseleave', () => { isTrailing = false; school.classList.remove('active'); fishes.forEach(f => { f.style.position = 'relative'; f.style.left = '0'; f.style.top = '0'; }); });
    </script>
</body>
